<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:elevation="15dp"
    android:background="?attr/cardBackgroundColor"
    app:cardBackgroundColor="?attr/cardBackgroundColor"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/tour_card_theme"
                android:background="@color/transparent"
                android:gravity="left"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/tour_card_title"
                android:textColor="?attr/textColorStrong"
                android:textSize="18dp"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_weight="9"
                android:layout_width="0px"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/tour_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tour_card_description"
            android:textColor="?attr/textColor"
            android:textSize="10dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Book Title"/>

        <Button
            android:id="@+id/view_guide_btn"
            android:background="?attr/buttonColor"
            android:textColor="?attr/buttonTextColor"
            android:textSize="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/view_guide_btntext"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
